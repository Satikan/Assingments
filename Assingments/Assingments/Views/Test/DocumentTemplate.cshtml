<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap" ng-controller="DocumentTemplateController">

    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>เอกสารเทมเพลท</strong></h3>
                        <div class="pull-right">
                            <button class="btn btn-default"><i class="fa fa-refresh"></i> Click Reload</button>
                        </div>
                        <div class="pull-right">
                            <button class="btn btn-default"><i class="fa fa-search"></i> ค้นหาเอกสาร</button>&nbsp;
                        </div>                       
                        <div class="pull-right">
                            <button class="btn btn-default"><i class="fa fa-file-o"></i> สร้างเอกสารใหม่</button>&nbsp;
                        </div>
                    </div>
                    <div class="panel-group accordion accordion-dc">
                        <div class="panel-heading " style="height: 40px;padding-top: 5px;">

                            <h4 style="font-size:16px;" class="panel-title">
                                <a href="#accTwoColOne" class="panel-collapse"><span class="fa fa-angle-down"> เอกสารเทมเพลท </span> </a>
                            </h4>
                        </div>
                        <div class="panel-body panel-body-open" id="accTwoColOne">
                            <div id="form-container">
                                <div id="form" dx-form="formOptionsDocumentTemplate"></div>
                                <div class="dx-field">
                                    <div class="dx-field-value">
                                        <div dx-button="{
                                        icon: 'save',
                                        text: 'Icon with Text',
                                        }"></div>
                                    </div>
                                    <div class="dx-field-value">
                                        <div dx-button="{
                                        icon: 'close',
                                        text: 'Icon with Text',
                                        }"></div>
                                    </div>
                                    <div class="dx-field-value">
                                        <div dx-button="{
                                        icon: 'doc',
                                        text: 'Icon with Text',
                                        }"></div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="panel-body panel-body-open" id="accTwoColTwo">
                            <div id="gridContainer" dx-data-grid="gridOptionsDocumentTemplate"></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- END PAGE CONTENT WRAPPER --> 